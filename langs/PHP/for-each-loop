<?php

$arr = array(1, 2, 3, 4); //defines array, see data structure documentation

foreach ($arr as &$value) { //loop once for each object in the array
    $value = $value * 2; //execute statement for each object
}

// you can also get the key/index of array in for-each-loop
foreach ($arr as $key => $value) {
    echo "Array value for index {$key} is {$value}\n";
}